@model QuestionsAndAnswers.Models.UserPostViewModel

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>
<h2>Ask a new question!</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true, "Question creation was unsuccessful. Please correct the errors and try again.")
    <div>
        <fieldset>
            <legend>Question Information</legend>

            <!-- Title:<input type="text" name="title"><br> -->
            <div class="editor-label">
                @Html.LabelFor(m => m.title)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.title)
                @Html.ValidationMessageFor(m => m.title)
            </div>

            <!-- <textarea rows="10" cols="30" name="content">Put your question here ...</textarea><br> -->
            <div class="editor-label">
                @Html.LabelFor(m => m.content)
            </div>
            <div class="text-box">
                @Html.TextArea("content")
                @Html.ValidationMessageFor(m => m.content)
            </div>

            <!-- Tag(s): some added tags will be shown here -->
            <div class="editor-label">
                @Html.Label("Tag(s):")
                @Html.Label("some added tags will be shown here")
            </div>

            <input type="button" value="Or add tag ->" /><input type="text" name="tag" /><br />
            <input type="submit" value="Send question" />
            <input type="button" value="Cancel" />
        </fieldset>
    </div>
}
