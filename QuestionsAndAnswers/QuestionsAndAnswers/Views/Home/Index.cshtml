@{
    ViewBag.Title = "QuestionsAndAnswers";
}

<div id="tabs">
  <ul>
    <li><a href="#tabs-1">Top Questions</a></li>
    <li><a href="#tabs-2">Newest Questions</a></li>
    <li><a href="#tabs-3">Newest Answers</a></li>
    <li><a href="#tabs-4">Tags</a></li>
  </ul>
  <div id="tabs-1">
    <p>The TOP QUESTIONS are going to be shown here.</p>
    <ul>
    @foreach (var question in ViewBag.topQuestions)
    {
        <li>@Html.ActionLink((String)question.title, "Details", "UserPost", new {id=question.id}, null)</li>
    }
    </ul>
  </div>

  <div id="tabs-2">
    <p>The NEWEST QUESTIONS are going to be shown here.</p>
    <ul>
    @foreach (var question in ViewBag.newestQuestions)
    {
        <li>@Html.ActionLink((String)question.title, "Details", "UserPost", new { id = question.id }, null)</li>
    }
    </ul>
  </div>

  <div id="tabs-3">
    <p>The NEWEST ANSWERS are going to be shown here.</p>
    <ul>
    @foreach (var item in ViewBag.newestAnswers)
    {
        <li>@Html.ActionLink((String)item.title, "Details", "UserPost", new { id = item.id }, null)</li>
    }
    </ul>
  </div>

  <div id="tabs-4">
    <p>The TAGS are going to be shown here.</p>
    <ul>
    @foreach (var item in ViewBag.tags)
    {
        <li>@item.name</li>
    }
    </ul>
  </div>
</div>

@Html.ActionLink("... or ask your own question!", "Create", "UserPost")

<ul>
@foreach (var item in ViewBag.users)
{
    <li>@item.username@(item.is_admin ? "(Admin)" : "")</li>
}
</ul>

